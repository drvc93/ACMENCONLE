<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/blue_clear_bg">

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentLeft="false"
        android:layout_alignWithParentIfMissing="false"
        android:layout_marginBottom="40dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Banco :"
                    android:id="@+id/textView13"
                    android:autoText="false"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:layout_marginLeft="5dp" />

                <Spinner
                    android:layout_width="fill_parent"
                    android:layout_height="35dp"
                    android:id="@+id/spBanco"
                    android:background="@drawable/spiner_style"
                    android:layout_marginLeft="35dp"
                    android:layout_marginRight="5dp"
                    android:spinnerMode="dialog" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Concepto"
                    android:id="@+id/textView14"
                    android:autoText="false"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:layout_marginLeft="5dp" />

                <Spinner
                    android:layout_width="fill_parent"
                    android:layout_height="35dp"
                    android:id="@+id/spConcepto"
                    android:background="@drawable/spiner_style"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="5dp"
                    android:spinnerMode="dialog" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Puesto"
                    android:id="@+id/textView18"
                    android:autoText="false"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:layout_marginLeft="5dp" />

                <Spinner
                    android:layout_width="fill_parent"
                    android:layout_height="35dp"
                    android:id="@+id/spPuesto"
                    android:background="@drawable/spiner_style"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="5dp"
                    android:spinnerMode="dialog" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Fecha:"
                    android:id="@+id/textView15"
                    android:autoText="false"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:layout_marginLeft="5dp" />

                <EditText
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:id="@+id/txtFechaPago"
                    android:background="@drawable/edittext_style"
                    android:padding="6dp"
                    android:focusableInTouchMode="false"
                    android:clickable="true"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="5dp"
                    android:hint="Fecha de pago" />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Nro.Op."
                    android:id="@+id/textView19"
                    android:autoText="false"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:layout_marginLeft="5dp" />

                <EditText
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:id="@+id/txtNroOperacion"
                    android:background="@drawable/edittext_style"
                    android:padding="6dp"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="5dp"
                    android:hint="Numero operacion" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Monto"
                    android:id="@+id/textView17"
                    android:autoText="false"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:layout_marginLeft="5dp" />

                <EditText
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:id="@+id/txtMontoPago"
                    android:background="@drawable/edittext_style"
                    android:padding="6dp"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="5dp"
                    android:hint="S/." />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Mensaje: "
                    android:id="@+id/textView16"
                    android:autoText="false"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:layout_marginLeft="5dp" />

                <EditText
                    android:layout_width="fill_parent"
                    android:layout_height="72dp"
                    android:inputType="textImeMultiLine"
                    android:ems="10"
                    android:id="@+id/txtMensajePago"
                    android:background="@drawable/edittext_style"
                    android:padding="6dp"


                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="5dp"
                    android:hint="Escribir mensaje" />

            </LinearLayout>

        </LinearLayout>

    </FrameLayout>

    <LinearLayout
        android:id="@+id/buttonBar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        style="@android:style/ButtonBar"
        android:gravity="center"
        android:background="@color/colorPrimary"
        android:orientation="vertical">


        <Button
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:text="ENVIAR"
            android:id="@+id/btnRegPago"
            android:background="#00ffffff"
            android:textSize="18dp"
            android:textColor="#ffffff"
            android:textStyle="bold" />
    </LinearLayout>

</RelativeLayout>